<Window x:Class="Tema2_MVP.Views.TasksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tema2_MVP.Views" xmlns:viewmodels="clr-namespace:Tema2_MVP.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:TreeVM}"
        mc:Ignorable="d"
        Title="TasksWindow" Height="450" Width="800">
    <Grid>
        <TreeView Name="TasksTree" Margin="10,72,592,72" ItemsSource="{Binding RootNode.Children}">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                    <TextBlock Text="{Binding Text}" />
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
        <DockPanel x:Name="gameWindowDockPanel" Margin="0,0,0,392">
            <Menu DockPanel.Dock="Top" Height="49">
                <MenuItem Header="_File">
                    <MenuItem Header="_Open Database"/>
                    <MenuItem Header="_New Database"/>
                    <MenuItem Header="_Archive Database"/>
                    <Separator />
                    <MenuItem Header="_Exit"/>
                </MenuItem>
                <MenuItem Header="_TDL">
                    <MenuItem Header="_Add Root TDL"/>
                    <MenuItem Header="_Add Sub-TDL"/>
                    <MenuItem Header="_Edit"/>
                    <MenuItem Header="_Delete"/>
                    <MenuItem Header="_Move up"/>
                    <MenuItem Header="_Move down"/>
                    <MenuItem Header="_Change path"/>
                </MenuItem>
                <MenuItem Header="_Task">
                    <MenuItem Header="_Add"/>
                    <MenuItem Header="_Edit"/>
                    <MenuItem Header="_Delete"/>
                    <MenuItem Header="_Set done"/>
                    <MenuItem Header="_Move up"/>
                    <MenuItem Header="_Move down"/>
                    <MenuItem Header="_Manage Category"/>
                    <MenuItem Header="_Find task"/>
                </MenuItem>
                <MenuItem Header="_View">
                    <MenuItem Header="_Sort"/>
                    <MenuItem Header="_Filter"/>
                    <MenuItem Header="_Statistics"/>
                </MenuItem>
                <MenuItem Header="_Help">
                    <MenuItem Header="_About"/>

                </MenuItem>
            </Menu>
        </DockPanel>

    </Grid>
</Window>
